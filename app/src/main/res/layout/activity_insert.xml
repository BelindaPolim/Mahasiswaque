<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:background="@color/colorAccent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/profPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/btnChange"
            android:layout_below="@+id/profPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Load Picture"/>
        <TextView
            android:id="@+id/tvNIM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnChange"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="NIM     "
            android:textStyle="bold"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/etNIM"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvNIM"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_below="@id/btnChange"
            android:background="#ffffff"
            android:inputType="number"
            android:hint="00000023490"
            android:layout_width="fill_parent">
        </EditText>
        <TextView
            android:id="@+id/tvNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_below="@id/tvNIM"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Nama  "
            android:textStyle="bold"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/etNama"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvNama"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_below="@id/etNIM"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="#ffffff"
            android:inputType="textPersonName"
            android:hint="Nama Mahasiswa"
            android:layout_width="fill_parent">
        </EditText>
        <TextView
            android:id="@+id/tvProdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_below="@id/tvNama"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Prodi         "
            android:textStyle="bold"
            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/spProdi"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_below="@id/tvNama"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="#ffffff"
            android:layout_toRightOf="@+id/tvProdi"
            android:prompt="@string/Prodi"
            android:layout_width="fill_parent"
            android:entries="@array/prodi">
        </Spinner>
        <TextView
            android:id="@+id/tvTahun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_below="@id/tvProdi"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Angkatan  "
            android:textStyle="bold"
            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/spTahun"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_below="@id/tvProdi"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="#ffffff"
            android:layout_toRightOf="@+id/tvTahun"
            android:prompt="@string/Angkatan"
            android:layout_width="fill_parent"
            android:entries="@array/angkatan">
        </Spinner>
        <TextView
            android:id="@+id/tvBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_below="@id/tvTahun"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Biografi"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/etBio"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBio"
            android:background="#ffffff"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:hint="Tell us something"
            android:inputType="textMultiLine"
            android:lines="5"
            android:layout_width="fill_parent">
        </EditText>
        <Button
            android:id="@+id/btnInsert"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etBio"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="Insert Data"
            android:onClick="insData"
            android:background="@color/pop"
            android:layout_width="fill_parent">
        </Button>
    </RelativeLayout>


</ScrollView>